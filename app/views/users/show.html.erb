<% flash.each do |key, value| %>
  <%= value %>
<% end %>
<br>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback:"no_image.jpeg" %></tr>
          <tr>
    	      <th>name</th>
    	      <th><%= @user.name %></th>
          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th><%= @user.body %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @user.id == current_user.id %>
            <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        <% else %>
            <%= link_to user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <div class="form-group">
        <%= form_with model: @book, url: books_path, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <div class="actions">
          <%= f.submit "Create Book", class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
              <% @books.each do |book| %>
              <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: "jpeg", fallback:"no_image.jpeg", size:'40x40' %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>