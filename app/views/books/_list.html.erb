    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: "jpeg", fallback:"no_image.jpeg" %></tr>
          <tr>
    	      <th>name</th>
    	      <th><%= @book.user.name %></th>
          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @book.user.id == current_user.id %>
            <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        <% else %>
            <%= link_to user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <div class="form-group">
        <%= form_with model: @book_new, url: books_path, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <div class="actions">
          <%= f.submit "Create Book", class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>