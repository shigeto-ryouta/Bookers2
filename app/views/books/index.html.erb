<h1>ここがbookのindex</h1>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <div class="row">
        <%# editbtn作成%>
      </div>
      <h2 class="mt-3">New book</h2>
      <div class="form-group">
        <%= form_with model: @book, url: books_path, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <div class="actions">
          <%= f.submit "Create Book", class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <p>Title</p>
            <span><%= book.title %></span>
            <p>Opinion</p>
            <span><%= book.body %></span>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>