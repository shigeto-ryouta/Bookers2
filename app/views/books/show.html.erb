<% flash.each do |key, value| %>
  <%= value %>
<% end %>
<br>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: "jpeg", fallback:"no_image.jpeg" %></tr>
          <tr>
    	      <th>name</th>
    	      <th><%= @book.user.name %></th>
          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th><%= @book.user.body %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @book.user.id == current_user.id %>
            <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        <% else %>
            <%= link_to user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <div class="form-group">
        <%= form_with model: @book_new, url: books_path, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <div class="actions">
          <%= f.submit "Create Book", class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
            <tr>
                <td>
                 <%= link_to user_path(@book.user) do %>
                     <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: "jpeg", fallback:"no_image.jpeg", size:'40x40' %>
                     <br><%= @book.user.name %><br/>
                 <% end %>
                </td>
              <td>
                <%= link_to book_path(@book) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success' %></td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-sm btn-danger' %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>